@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layoutlogin.cshtml";
}

<form method="post" asp-action="Login" asp-controller="Login" class="polman-form-login">
    <h4>Selamat Datang</h4>
    <hr />
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-warning">
            @TempData["Notification"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }


    <div class="form-group">
        <label for="txtUsername">
            Account Name
            <span style="color: red;">*</span>
        </label>
        <input type="text" id="username" name="username" maxlength="10" class="form-control" required=""
               oninvalid="this.setCustomValidity('Account Name is Required')"
               oninput="this.setCustomValidity('')">
    </div>

    <div class="form-group">
        <label for="txtPassword">
            Password
            <span style="color: red;">*</span>
        </label>
        <input id="password" type="password" name="password" class="form-control" required
               oninvalid="this.setCustomValidity('Password Required')"
               oninput="this.setCustomValidity('')">
    </div>

    <br />

    <button id="btnLogin" class="btn btn-primary" style="width: 100%; margin-top: 10px; margin-bottom: 10px;" title="Login">Login</button>

    <style>
        body {
            align-items: center;
            justify-content: center;
        }

        .polman-form-login {
            font-family: 'NAMA_FONT', Verdana;
            border-radius: 10px;
            overflow: hidden;
        }

        h4, label, input, button, span {
            font-family: 'NAMA_FONT', Verdana;
        }

        h4
        {
            text-align: center;
        }

    </style>
</form>