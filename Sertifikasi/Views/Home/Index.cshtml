                    type: 'bar',
                    data: tidakkompeten,
                    backgroundColor: 'rgba(255, 159, 64, 0.2)',
                    borderColor: 'rgb(255, 159, 64)',
                    borderWidth: 1,
                    order: 2 // specify the order for this dataset
