@{
    ViewData["Title"] = "Sertifikasi";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="idprodi" class="control-label">Program Studi</label>
                    <select name="idprodi" id="idprodi" class="form-control" required>
                        <option value="">-- Pilih Program Studi --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Nama Sertifikasi</label>
                    <input class="form-control" name="namaserti" id="namaserti" />
                </div>
                <div class="form-group">
                    <label class="control-label">Tanggal Sertifikasi</label>
                    <input class="form-control" type="date" name="tanggal" id="tanggal" />
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" onclick="simpan()">Simpan</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    loadProdi();

    function loadProdi() {
        var hostname = "http://localhost:5268/";
        var url = hostname + "GetAllProdi";
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var list = data.data;
                list.forEach(function (item) {
                    var newOption = '<option value="' + item.idProdi + '">' + item.namaProdi + "</option>";
                    $("#idprodi").append(newOption);
                });
            },
        });
    }

    function simpan() {
        var idpro = document.getElementById("idprodi").value;
        var namaserti = document.getElementById("namaserti").value;
        var tanggal = document.getElementById("tanggal").value;

        var hostname = "http://localhost:5268/";
        var url = hostname + "InsertSertifikasi";
        var method = "POST";

        var input = {
            idProdi: idpro,
            namaSerti: namaserti,
            tanggal: tanggal,
        };

        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                // Menampilkan SweetAlert setelah data berhasil disimpan
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil',
                    text: 'Data berhasil ditambahkan!',
                }).then((result) => {
                    // Redirect ke halaman Index setelah menekan OK di SweetAlert
                    if (result.isConfirmed) {
                        window.location.href = "/Sertifikasi/Index";
                    }
                });
            },
            error: function (error) {
                console.error('Error:', error);
                // Tambahkan penanganan kesalahan jika diperlukan
            }
        });
    }
</script>
